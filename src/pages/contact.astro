---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact Us',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Get in Touch" />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'Community Support',
        description: `Join our community channels for help with OpenClaw installation and usage.`,
      },
      {
        title: 'Documentation Issues',
        description:
          'Found a typo or wrong info? Open an issue on our GitHub repository.',
      },
      {
        title: 'Twitter',
        description: '@openclaw_ai',
        icon: 'tabler:brand-x',
        callToAction: {
             text: 'Follow us',
             href: 'https://twitter.com/openclaw_ai',
        }
      },
      {
        title: 'GitHub',
        description: 'openclaw/openclaw',
        icon: 'tabler:brand-github',
        callToAction: {
             text: 'Star us',
             href: 'https://github.com/openclaw/openclaw',
        }
      },
    ]}
  />
</Layout>
