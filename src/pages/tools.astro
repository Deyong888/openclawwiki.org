---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'OpenClaw Utilities & Tools',
  description: 'Interactive tools to help you deploy, configure, and estimate costs for your OpenClaw agents.',
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="Utilities"
    title="OpenClaw Tools Suite"
    subtitle="Configure, Deploy, and Optimize your AI Agents with ease."
  />

  <WidgetWrapper containerClass="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
      {/* Docker Compose Generator Card */}
      <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 flex flex-col hover:shadow-xl transition-shadow">
        <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">Docker Compose Generator</h3>
        <p class="text-gray-600 dark:text-gray-400 mb-6 flex-grow">Generate a production-ready deployment configuration in seconds. Supports Vultr, DigitalOcean, and Zeabur.</p>
        <a href={getPermalink('/tools/docker-compose-generator')} class="inline-flex justify-center items-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-primary hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors">
            Launch Generator
        </a>
      </div>

      {/* Cost Estimator Card */}
      <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 flex flex-col hover:shadow-xl transition-shadow">
        <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">API Cost Estimator</h3>
        <p class="text-gray-600 dark:text-gray-400 mb-6 flex-grow">Estimate your monthly Anthropic API usage costs. Includes official Claude 4.5 pricing.</p>
        <a href={getPermalink('/tools/claude-cost-estimator')} class="inline-flex justify-center items-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-primary hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors">
            Calculate Costs
        </a>
      </div>

      {/* Security Policy Card */}
      <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 flex flex-col hover:shadow-xl transition-shadow">
        <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">Security Policy Maker</h3>
        <p class="text-gray-600 dark:text-gray-400 mb-6 flex-grow">Create a secure whitelist for your agent's capabilities. Define allowed commands and paths.</p>
        <a href={getPermalink('/tools/security-policy-generator')} class="inline-flex justify-center items-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-primary hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors">
            Create Policy
        </a>
      </div>
    </div>

    {/* Recommended Resources (Function 4) */}
    <div id="resources" class="mb-12">
       <Headline
        title="Recommended Resources"
        subtitle="Curated tools and sites for the OpenClaw community."
        classes={{ container: 'mb-8 text-left' }}
      />
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <a href="https://stoiclines.store" target="_blank" rel="noopener noreferrer" class="block p-6 bg-white dark:bg-slate-900 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary transition-colors group">
              <h3 class="text-lg font-bold mb-2 group-hover:text-primary text-gray-900 dark:text-white">Philosophy & Mindset</h3>
              <p class="text-gray-600 dark:text-gray-400 text-sm">Explore <span class="font-semibold text-primary/90">digital stoicism</span> and <span class="font-semibold text-primary/90">philosophy blog</span>.</p>
          </a>
          <a href="https://linktoai.top" target="_blank" rel="noopener noreferrer" class="block p-6 bg-white dark:bg-slate-900 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary transition-colors group">
              <h3 class="text-lg font-bold mb-2 group-hover:text-primary text-gray-900 dark:text-white">AI Tools Directory</h3>
              <p class="text-gray-600 dark:text-gray-400 text-sm">A curated collection of <span class="font-semibold text-primary/90">AI tools directory</span> and <span class="font-semibold text-primary/90">curated AI resources</span>.</p>
          </a>
          <a href="https://24kwebgames.com" target="_blank" rel="noopener noreferrer" class="block p-6 bg-white dark:bg-slate-900 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-primary transition-colors group">
              <h3 class="text-lg font-bold mb-2 group-hover:text-primary text-gray-900 dark:text-white">Relax & Play</h3>
              <p class="text-gray-600 dark:text-gray-400 text-sm">Unwind with free <span class="font-semibold text-primary/90">online games</span> and <span class="font-semibold text-primary/90">browser games</span>.</p>
          </a>
      </div>
    </div>

  </WidgetWrapper>
</Layout>
