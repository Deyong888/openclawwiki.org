---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features3 from '~/components/widgets/Features3.astro';

const metadata = {
  title: 'About Us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About OpenClaw Wiki"
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'OpenClaw Wiki Team',
    }}
  >
    <Fragment slot="title">
      Building the ultimate <br />
      <span class="text-accent dark:text-white">Open Source AI Community</span>
    </Fragment>

    <Fragment slot="subtitle">
      OpenClaw Wiki is a community-driven project dedicated to documenting and promoting OpenClaw (formerly Clawdbot/Moltbot).
      We believe in the power of open-source AI and making it accessible to everyone.
    </Fragment>
  </Hero>

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Mission"
    subtitle="To provide comprehensive, up-to-date, and easy-to-understand documentation for the OpenClaw ecosystem."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Community Driven',
        description:
          'Created and maintained by enthusiasts who use OpenClaw daily.',
        icon: 'tabler:users',
      },
      {
        title: 'Open Source',
        description:
          'Everything we do is open source. Contribute to the docs on GitHub.',
        icon: 'tabler:brand-github',
      },
      {
        title: 'Education',
        description:
          'We aim to lower the barrier to entry for self-hosted AI agents.',
        icon: 'tabler:book',
      },
    ]}
  />
</Layout>
